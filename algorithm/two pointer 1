https://www.acmicpc.net/problem/2559

#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

int main(){
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	int n, k, temp = 1, max = -2001;
	int arr[100001] = { 0 }, carr[100001] = { 0 };

	cin >> n >> k;

	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	for (int i = 0; i < k; i++) {
		carr[0] += arr[i];
	}
	for (int i = 1; i <= n - k; i++) {
		carr[temp] = carr[temp - 1] - arr[i - 1] + arr[i + k - 1];
		temp++;
	}
	for (int i = 0; i <= n - k; i++) {
		if (max < carr[i]) {
			max = carr[i];
		}
	}
	cout << max;

	return 0;
}
