2022 10 17

2840번 행운의 바퀴 : https://www.acmicpc.net/problem/2840

#include <iostream>
#include <deque>

using namespace std;

int main() {
	deque<int>q;
	bool alpha[26] = { 0 };

	int n, k;

	cin >> n >> k;

	for (int i = 0; i < n; i++) q.push_back(0);
	
	for (int i = 0; i < k; i++) {
		int d; cin >> d;
		for (int j = 0; j < d; j++) {
			q.push_back(q.front()); q.pop_front();
		}
		
		char ch; cin >> ch;
		if (q.front() != ch && alpha[ch - 65] == 1) {
			cout << "!\n";
			return 0;
		}
		if (q.front() == 0 || q.front() == ch) {
			q.pop_front(); q.push_front(ch);
		}
		else {
			cout << "!\n";
			return 0;
		}
		alpha[ch - 65] = 1;
	}
	for (int j = 0; j < n; j++) {
		if (q.front() != 0)
			printf("%c", q.front());
		else
			cout << "?";
		q.push_front(q.back());
		q.pop_back();
	}
	return 0;
}
